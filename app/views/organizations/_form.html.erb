<%= simple_form_for @organization do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :street %>
    <%= f.text_field :street %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div class="field">
    <%= f.label :zipcode %>
    <%= f.text_field :zipcode %>
  </div>

  <div class="field">
    <%= f.label :website_url, 'Website URL' %>
    <%= f.text_field :website_url %>
  </div>

  <div class="field">
    <%= f.label :charter_page_url, 'Charter Page URL' %>
    <%= f.text_field :charter_page_url %>
  </div>

  <div class="field">
    <%= f.label :organization_interests %><br />
    <%= f.collection_select "interest_ids", Interest.all, :id, :interest, {}, html_options = {multiple: true, class: "interests" } %>
  </div>

  <div class="field">
    <%= f.label :organization_skills %><br />
    <%= f.collection_select "skill_ids", Skill.all, :id, :skill, {}, html_options = {multiple: true, class: "skills" } %>
  </div>

  <div class="field">
    <%= f.submit %>
  </div>
<% end %>
